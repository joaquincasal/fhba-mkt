<div class="container is-max-desktop">
  <div class="box">
    <h2 class="subtitle"><%= t "devise.invitations.edit.header" %></h2>

    <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :invitation_token, readonly: true %>

      <% if f.object.class.require_password_on_accepting %>
        <div class="field">
          <%= f.label :password, class: "label" %>
          <div class="control has-icons-left">
            <%= f.password_field :password, autocomplete: "current-password", class: "input is-rounded" %>
            <span class="icon is-small is-left">
            <i class="fas fa-key"></i>
          </span>
          </div>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, class: "label" %>
          <div class="control has-icons-left">
            <%= f.password_field :password_confirmation, autocomplete: "current-password", class: "input is-rounded" %>
            <span class="icon is-small is-left">
            <i class="fas fa-key"></i>
          </span>
          </div>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit t('.submit_button'), class: "button is-primary is-rounded" %>
      </div>
    <% end %>

  </div>
</div>

