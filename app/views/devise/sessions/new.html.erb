<div class="container is-max-desktop">
  <div class="box">
    <h2 class="title"><%= t('.sign_in') %></h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, class: "label" %>
        <div class="control has-icons-left">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input is-rounded" %>
          <span class="icon is-small is-left">
            <i class="fas fa-envelope"></i>
          </span>
        </div>
      </div>

      <div class="field">
        <%= f.label :password, class: "label" %>
        <div class="control has-icons-left">
          <%= f.password_field :password, autocomplete: "current-password", class: "input is-rounded" %>
          <span class="icon is-small is-left">
            <i class="fas fa-key"></i>
          </span>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "checkbox" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit t('.sign_in'), class: "button is-primary is-rounded" %>
      </div>
    <% end %>
  </div>
  <%= render "devise/shared/links" %>
</div>